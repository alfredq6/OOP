<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:_2lab4_5"
                    xmlns:s="clr-namespace:WpfControlLibrary1">
    <Label x:Key="En_ComboBoxItem" FontFamily="Century Gothic" FontSize="14">EN</Label>
    <Label x:Key="Ru_ComboBoxItem" FontFamily="Century Gothic" FontSize="14">RU</Label>
    <StackPanel x:Key="Bold_ToggleButton" Width="30" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">B</TextBlock>
    </StackPanel>
    <StackPanel x:Key="Italic_ToggleButton" Width="30" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="1,0,0,0">I</TextBlock>
    </StackPanel>
    <StackPanel x:Key="Underline_ToggleButton" Width="30" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock TextDecorations="Underline" HorizontalAlignment="Center" VerticalAlignment="Center">U</TextBlock>
    </StackPanel>
</ResourceDictionary>