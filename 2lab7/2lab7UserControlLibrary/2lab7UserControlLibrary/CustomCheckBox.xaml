<UserControl x:Class="_2lab7UserControlLibrary.CustomCheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_2lab7UserControlLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="500">
    <UserControl.Resources>
        <local:Phone x:Key="Phone" Checked="True"/>
    </UserControl.Resources>
    <Grid>
        <Viewbox>
            <StackPanel>
                <Ellipse Height="300" Width="300" Stroke="#FFCBAF80" StrokeThickness="40" Fill="Black"/>
                <Ellipse x:Name="InnerCircle" MouseDown="InnerCircle_MouseDown" Margin="0,-300,0,0" Height="200" Width="200" Fill="#FFA04141"/>
            </StackPanel>
        </Viewbox>
    </Grid>
</UserControl>
